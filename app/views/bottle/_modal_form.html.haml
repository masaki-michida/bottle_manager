.form_content
  = form_with model: @new_bottle,url:{controller: 'bottle', action: 'create' },local: true do |form|
    .localnumber
      = form.label :local_number
      = form.number_field :local_number
    .selector
      = form.label :kind_of_alchol_id
      = form.select :kind_of_alchol_id,@kinds
    .liquid_level
      = form.label :liquid_level
      = form.number_field :liquid_level
    .karaoke
      = form.label :karaoke
      = form.number_field :karaoke
    .add_created_cusomer 既にある名前を追加
    .add_form 新しい名前を追加
    .submit 
      = form.submit
